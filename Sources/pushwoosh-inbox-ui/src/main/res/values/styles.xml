<resources>
	
	<!-- Base application theme. -->
	<style name="PwInboxTheme"
	       parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/colorPrimary</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		
		<item name="inboxAccentColor">?attr/colorAccent</item>

		<item name="inboxBackgroundColor">@android:color/white</item>
		<item name="inboxHighlightColor">?attr/colorControlHighlight</item>
		
		<item name="inboxImageTypeColor">?android:textColorSecondary</item>
		<item name="inboxReadImageTypeColor">?android:textColorSecondary</item>
		
		<item name="inboxTitleColor">?android:textColorPrimary</item>
		<item name="inboxReadTitleColor">?android:textColorSecondary</item>
		
		<item name="inboxDescriptionColor">?android:textColorSecondary</item>
		<item name="inboxReadDescriptionColor">?android:textColorSecondary</item>
		
		<item name="inboxDateColor">?attr/inboxAccentColor</item>
		<item name="inboxReadDateColor">?android:textColorSecondary</item>
		
		<item name="inboxDividerColor">?android:textColorPrimary</item>
	</style>

	<style name="PwInboxAttachment"
		parent="Theme.AppCompat.Light.NoActionBar">
	</style>
	
	<style name="TextAppearance.Inbox.InboxTitle"
	       parent="TextAppearance.AppCompat.Subhead">
	</style>
	
	<style name="TextAppearance.Inbox.InboxDescription"
	       parent="TextAppearance.AppCompat.Body1">
	</style>

	<style name="TextAppearance.Inbox.InboxDate"
		parent="TextAppearance.AppCompat.Caption"/>

	<style name="PwAttachmentView">
	</style>

